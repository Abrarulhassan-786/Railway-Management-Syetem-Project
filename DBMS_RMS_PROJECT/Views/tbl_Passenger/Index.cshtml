@model IEnumerable<DBMS_RMS_PROJECT.Models.tbl_Passenger>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.p_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.p_Phone_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_Seat_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbl_Train.T_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.p_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.p_Phone_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Seat_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_Train.T_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.P_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.P_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.P_ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
