@model IEnumerable<DBMS_RMS_PROJECT.Models.tbl_Station>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.S_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.S_ArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbl_Train.T_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbl_User.U_Fname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.S_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.S_ArrivalTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_Train.T_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_User.U_Fname)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.S_No }) |
                    @Html.ActionLink("Details", "Details", new { id = item.S_No }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.S_No })
                </td>
            </tr>
        }

    </table>
</body>
</html>
