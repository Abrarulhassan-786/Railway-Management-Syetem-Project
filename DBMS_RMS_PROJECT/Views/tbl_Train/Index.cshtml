@model IEnumerable<DBMS_RMS_PROJECT.Models.tbl_Train>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.T_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_Desination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_DepartureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_ArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_seats_Available)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.T_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_Desination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_DepartureTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_ArrivalTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_seats_Available)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Train_No }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Train_No }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Train_No })
                </td>
            </tr>
        }

    </table>
</body>
</html>
